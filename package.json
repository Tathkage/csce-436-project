{
  "name": "audio-debugger",
  "displayName": "Audio Debugger",
  "description": "An accessible audio debugger.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["onCommand:audio-debugger.readAloud"],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "audio-debugger.readAloud",
        "title": "Read Text Aloud"
      },
      {
        "command": "audio-debugger.aiDebugging",
        "title": "OpenAI Audio Feedback"
      },
      {
        "command": "audio-debugger.aiExplanation",
        "title": "OpenAI Text Feedback"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorTextFocus && !editorReadonly",
          "command": "audio-debugger.readAloud",
          "group": "navigation"
        },
        {
          "when": "editorTextFocus && !editorReadonly",
          "command": "audio-debugger.aiDebugging",
          "group": "navigation"
        },
        {
          "when": "editorTextFocus && !editorReadonly",
          "command": "audio-debugger.aiExplanation",
          "group": "navigation"
        }
      ]
    }
},
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.86.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "say": "^0.16.0"
  }
}
